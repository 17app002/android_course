<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <include android:id="@+id/activity_catalog"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/activity_item"
        layout="@layout/activity_catalog"/>


    <include android:id="@+id/activity_item"
        android:layout_alignParentRight="true"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        layout="@layout/activity_item"/>



    <TextView
        android:id="@+id/logo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#471C0C"
        android:gravity="center"
        android:text="www.starbox.com.tw"
        android:textColor="#FFFFFF" />



</RelativeLayout>